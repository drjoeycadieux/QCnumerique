<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Register | Quebec Numérique</title>
        <link rel="stylesheet" href="/styles/register.css" />
        <script
            src="https://www.gstatic.com/firebasejs/10.8.1/firebase-app-compat.js"
        ></script>
        <script
            src="https://www.gstatic.com/firebasejs/10.8.1/firebase-auth-compat.js"
        ></script>
        <script src="https://apis.google.com/js/platform.js" async defer
        ></script>
    </head>

    <body>
        <div class="register-container">
            <h1>Créer un compte</h1>

            <form id="email-register-form">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required />

                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="password" required />

                <button type="submit">S'inscrire</button>
            </form>

            <div id="google-sign-in-btn"></div>

            <footer>
                <p>Déjà un compte? <a href="/login.html">Se connecter</a></p>
            </footer>
        </div>

        <!-- Include the TypeScript code -->
        <script type="module" src="../../public/script/register.ts" defer
        ></script>
    </body>
</html>
